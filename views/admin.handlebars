                                <div class="flex"><span>Breed: </span> <b>{{ breed }}</b> </div>
                                <div class="flex"><span>Food Requirements:  </span> <b>{{food_requirements}}</b> </div>
                                <div class="flex"><span>Friendliness:  </span> <b>{{food_requirements}}</b> </div>
                            </div>
                        </div>
                        <a class="btn btn-primary btn-x update" id="{{ id }}">Update</a>
                        <a class="btn btn-primary btn-x delete" id="{{ id }}">Picked-up</a>
                    </div>
                    {{/each}}
